{
  "name": "desktop-app",
  "productName": "My Pc & eReuse Support",
  "version": "0.0.1",
  "main": "main.js",
  "description": "Helps to show information about eReuse and support",
  "license": "MIT",
  "repository": "JNadeu/desktop-app",
  "author": {
    "name": "Nadeu",
    "email": "jnadeu@gmail.com",
    "url": "github.com/eReuse/desktop-app"
  },
  "scripts": {
    "test": "xo",
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "files": [
    "main.js",
    "./web/index.html",
    "./web/css/style.css"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "electron-debug": "^1.0.0",
    "python-shell": "^0.4.0"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron": "^1.3.3",
    "electron-builder": "^16.6.1",
    "electron-packager": "^8.0.0",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  },
  "build": {
    "appId": "My eReuse.org & Support",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
