{
  "name": "eReuse.org-DesktopApp",
  "productName": "My eReuse.org & Support",
  "version": "0.0.1",
  "description": "Support PC and report incidents, and also show information about eReuse.org and the social contribution with usage of this computer",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "test": "./node_modules/mocha/bin/mocha tests/testWindows.test.js",
    "clear": "rm -r dist",
    "dist": "npm run linux32 && npm run linux64",
    "linux32": "build --linux --ia32 ",
    "linux64": "build --linux --x64",
    "publish": "publish",
    "release64": "npm run linux64 && npm run publish"
  },
  "author": {
    "name": "Jordi Nadeu",
    "email": "j.nadeu@ereuse.org",
    "url": "https://github.com/JNadeu/"
  },
  "license": "GNU Affero v3",
  "build": {
    "productName": "MyeReuse.org_Support",
    "appId": "tools.ereuse.org.support",
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "System",
      "icon": "./build/icons"
    },
    "deb": {
      "afterInstall": "./scripts/afterInstall.sh",
      "depends": [
        "nodejs",
        "npm",
        "git",
        "python-pip",
        "python-lxml",
        "python-gnupg",
        "python-pip",
        "python-setuptools",
        "python-wheel",
        "python-dev",
        "cifs-utils",
        "dmidecode",
        "fsarchiver",
        "gnupg",
        "grub2-common",
        "lshw",
        "python-dmidecode",
        "smartmontools",
        "stress",
        "usbmount",
        "smartmontools"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "./build/icon.ico"
    },
    "extraResources": [
      {
        "from": "./resources"
      }
    ]
  },
  "updater": {
    "channel": "beta",
    "url": "https://raw.githubusercontent.com/eReuse/desktop-app/master/updates.json"
  },
  "engines": {
    "node": ">=7.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eReuse/desktop-app.git"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "node-notifier": "^5.1.2",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "semver": "^5.3.0",
    "username": "^3.0.0",
    "promise": "latest"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "electron": "^1.6.2",
    "electron-builder": "^17.0.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^3.5.0",
    "spectron": "^3.7.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
