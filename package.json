{
  "name": "desktop-app",
  "productName": "My eReuse & PC Support",
  "version": "0.0.2",
  "description": "Helps to show information about eReuse.org and support",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "dist": "build"
  },
  "author": {
    "name": "Jordi Nadeu",
    "email": "jnadeu@gmail.com",
    "url": "github.com/eReuse/desktop-app"
  },
  "license": "GNU Affero v3",
  "private": true,
  "build": {
    "appId": "ereuse.org.support",
    "mac": {
      "category": "public.app-category.support-tools"
    },
    "win": {
      "target": "squirrel"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "updater": {
       "url": "https://raw.githubusercontent.com/eReuse/desktop-app/master/updates.json"
  },
  "engines": {
    "node": ">=6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eReuse/desktop-app.git"
  },
  "dependencies": {
    "electron-simple-updater": "^1.2.0",
    "python-shell": "^0.4.0"
  },
  "devDependencies": {
    "electron": "^1.6.2",
    "electron-builder": "^17.0.1"
  }
}
