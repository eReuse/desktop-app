{
  "name": "eReuse.org-DesktopApp",
  "productName": "My eReuse.org & Support",
  "version": "0.1.1",
  "description": "Support PC and report incidents, and also show information about eReuse.org and the social contribution with usage of this computer",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "test": "gksudo -k ./node_modules/mocha/bin/mocha tests/updater.test.js",
    "clear": "rm -rf dist",
    "linux32": "build -l --ia32 ",
    "dist32": "npm run clear && npm run linux32",
    "linux64": "build -l --x64",
    "dist64": "npm run clear && build -l --x64",
    "dist": "npm run clear && npm run linux32 && npm run linux64"
  },
  "author": {
    "name": "Jordi Nadeu",
    "email": "j.nadeu@ereuse.org",
    "url": "https://github.com/JNadeu/"
  },
  "license": "GNU Affero v3",
  "build": {
    "productName": "MyeReuse.org_Support",
    "appId": "tools.ereuse.org.support",
    "linux": {
      "target": [
        "deb"
      ],
      "category": "System",
      "icon": "./build/icons"
    },
    "deb": {
      "afterInstall": "./scripts/afterInstall.sh",
      "depends": [
        "git",
        "python3",
        "python3-pip",
        "python3-dev",
        "cifs-utils",
        "dmidecode",
        "fsarchiver",
        "grub2-common",
        "lshw",
        "smartmontools",
        "stress",
        "pciutils",
        "parted",
        "libusb-1.0-0"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "./build/icon.ico"
    },
    "files": [
      "**/*",
      "!tests${/*}"
    ],
    "extraResources": [
      {
        "from": "./resources"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eReuse/desktop-app.git"
  },
  "dependencies": {
    "bootstrap": "3.3.7",
    "chokidar": "1.7.0",
    "font-awesome": "4.7.0",
    "jquery": "3.2.1",
    "lodash": "4.17.5",
    "node-linux": "0.1.11",
    "node-notifier": "5.2.1",
    "promise": "8.0.1",
    "request": "2.81.0",
    "request-promise": "4.2.1",
    "semver": "5.3.0"
  },
  "devDependencies": {
    "chai": "4.1.1",
    "chai-as-promised": "7.1.1",
    "electron": "1.6.*",
    "electron-builder": "17.0.1",
    "eslint": "3.19.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "3.0.1",
    "express": "4.15.4",
    "mocha": "3.5.0",
    "spectron": "3.7.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
